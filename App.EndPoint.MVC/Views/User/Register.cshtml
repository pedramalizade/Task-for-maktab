@using App.Domain.Core.Entities
@model User
<div class="page">

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
    <form class="register-form" method="post" asp-action="Register">

        <h4>ثبت نام </h4><br>


        <input placeholder="نام کاربری" type="text" asp-for="UserName"><br>
        <span class="text-danger" asp-validation-for="UserName"></span>
        <input placeholder="ایمیل" type="text" asp-for="Email"><br>
        <span class="text-danger" asp-validation-for="Email"></span>
        <input placeholder="رمز عبور" type="password" asp-for="PasswordHash"><br><br>
        <span class="text-danger" asp-validation-for="PasswordHash"></span>
        <button type="send" class="register-btn">ثبت نام</button>


    </form>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}


